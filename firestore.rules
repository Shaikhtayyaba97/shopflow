
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user role from the users collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Users can only read their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Products can be read by admin/shopkeeper, but only written by admin
    match /products/{productId} {
      allow read: if request.auth != null && (getUserRole(request.auth.uid) == 'admin' || getUserRole(request.auth.uid) == 'shopkeeper');
      allow write: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    // Sales can be created by admin/shopkeeper, but only read by admin
    match /sales/{saleId} {
      allow read: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
      allow create: if request.auth != null && (getUserRole(request.auth.uid) == 'admin' || getUserRole(request.auth.uid) == 'shopkeeper');
      // No updates or deletes allowed for sales records for data integrity
      allow update, delete: if false;
    }
  }
}
