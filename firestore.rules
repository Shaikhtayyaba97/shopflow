
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read their own profile information
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow writes for admins or the user themselves.
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Admins can manage products
    match /products/{productId} {
      allow read: if request.auth != null; // Shopkeepers and Admins can read
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Admins and shopkeepers can create sales
    match /sales/{saleId} {
        allow create: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'shopkeeper');
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
