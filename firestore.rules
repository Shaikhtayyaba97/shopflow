rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId;
    }

    match /products/{productId} {
      allow get, list: if getUserRole(request.auth.uid) in ['admin', 'shopkeeper'];
      allow create, update: if getUserRole(request.auth.uid) in ['admin', 'shopkeeper'];
      allow delete: if getUserRole(request.auth.uid) == 'admin';
    }

    match /sales/{saleId} {
      allow create: if getUserRole(request.auth.uid) in ['admin', 'shopkeeper'];
      allow read: if getUserRole(request.auth.uid) == 'admin';
    }
  }
}
