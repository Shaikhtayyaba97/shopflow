rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
    }

    match /products/{productId} {
      allow read: if request.auth != null;
      // Admins can do anything.
      // Shopkeepers can create/update but can't touch purchasePrice.
      allow create: if isUserRole('admin') || isUserRole('shopkeeper');
      allow update: if isUserRole('admin') || 
                     (isUserRole('shopkeeper') && !('purchasePrice' in request.resource.data));
      allow delete: if isUserRole('admin');
    }

    match /sales/{saleId} {
      // Admins can read all sales data for reports.
      allow read: if isUserRole('admin');
      // Any authenticated user (shopkeeper or admin) can create a sale.
      allow create: if request.auth != null;
    }
  }
}
