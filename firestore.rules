
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create; 
    }

    match /products/{productId} {
      allow get, list: if request.auth != null;
      
      allow create: if request.auth != null;

      allow update: if getUserRole(request.auth.uid) == 'admin'
                    || (getUserRole(request.auth.uid) == 'shopkeeper'
                        && !('purchasePrice' in request.resource.data));

      allow delete: if getUserRole(request.auth.uid) == 'admin';
    }

    match /sales/{saleId} {
        allow create: if request.auth != null;
        allow read: if getUserRole(request.auth.uid) == 'admin';
    }
  }
}
